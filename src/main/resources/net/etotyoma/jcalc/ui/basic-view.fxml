<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane prefHeight="352.0" prefWidth="250.0" style="-fx-background-color: #2C3639;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.etotyoma.jcalc.controller.CalculatorController">
   <stylesheets>
      <URL value="@../style/main.css"/>
   </stylesheets>
   <GridPane alignment="BOTTOM_CENTER" prefHeight="350.0" prefWidth="250.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="1" GridPane.rowIndex="4"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="2" GridPane.columnIndex="1"
              GridPane.rowIndex="4"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="3" GridPane.columnIndex="2"
              GridPane.rowIndex="4"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="4" GridPane.rowIndex="3"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="5" GridPane.columnIndex="1"
              GridPane.rowIndex="3"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="6" GridPane.columnIndex="2"
              GridPane.rowIndex="3"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="7" GridPane.rowIndex="2"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="8" GridPane.columnIndex="1"
              GridPane.rowIndex="2"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="9" GridPane.columnIndex="2"
              GridPane.rowIndex="2"/>
      <Button onMouseClicked="#onNumpadButtonClick" styleClass="numpadButton" text="0" GridPane.columnSpan="2"
              GridPane.rowIndex="5"/>
      <Button onMouseClicked="#onActionButtonClick" styleClass="numpadButton" text="." GridPane.columnIndex="2"
              GridPane.rowIndex="5"/>
      <Button onMouseClicked="#onOperatorButtonClick" styleClass="operatorButton" text="=" GridPane.columnIndex="3"
              GridPane.rowIndex="5"/>
      <Button onMouseClicked="#onOperatorButtonClick" styleClass="operatorButton" text="+" GridPane.columnIndex="3"
              GridPane.rowIndex="4"/>
      <Button onMouseClicked="#onOperatorButtonClick" styleClass="operatorButton" text="-" GridPane.columnIndex="3"
              GridPane.rowIndex="3"/>
      <Button onMouseClicked="#onOperatorButtonClick" styleClass="operatorButton" text="X" GridPane.columnIndex="3"
              GridPane.rowIndex="2"/>
      <Button onMouseClicked="#onOperatorButtonClick" styleClass="operatorButton" text="÷" GridPane.columnIndex="3"
              GridPane.rowIndex="1"/>
      <Button onMouseClicked="#onActionButtonClick" styleClass="actionButton" text="\%" GridPane.columnIndex="2"
              GridPane.rowIndex="1"/>
      <Button onMouseClicked="#onActionButtonClick" styleClass="actionButton" text="±" GridPane.columnIndex="1"
              GridPane.rowIndex="1"/>
      <Button fx:id="clearButton" onMouseClicked="#onClearButtonClick" styleClass="actionButton" text="AC"
              GridPane.rowIndex="1"/>
      <Label fx:id="output" id="outputLabel" text="0" GridPane.columnSpan="4"/>
   </GridPane>
</AnchorPane>
